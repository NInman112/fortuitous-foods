<div class="p_rest rest_card">
<h2>Search for restaurants</h2>
<%= render partial: 'new', locals: { restaurant: @restaurant } %>
<%= form_for @restaurant, :url => {:action => "search"} do |f|%>
  <%= f.hidden_field :cuisine, :value => @cuisines.sample %>
  <%= f.hidden_field :zip, :value => @user.zip %>
  <%= f.button "I'm Feeling Fortuitous", name: "randomize", value: 50, class:"button" %><br>
<% end %>
</div><br>
<div class="p_rest center">
  <a class="restaurants button" href="<%= restaurants_path %>">Popular Restaurants</a>
  <div class="display_restaurants">
  </div>
</div>

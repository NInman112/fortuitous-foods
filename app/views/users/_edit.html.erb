<%= form_for user do |f| %>
  <%= f.label :username %><br>
  <%= f.text_field :username, required: true %><br>
  <%= f.label :email %><br>
  <%= f.email_field :email, required: true %><br>
  <%= f.label :first_name %><br>
  <%= f.text_field :first_name, required: true %><br>
  <%= f.label :last_name %><br>
  <%= f.text_field :last_name, required: true %><br>
  <%= f.label :zip %><br>
  <%= f.number_field :zip, required: true %><br>
  <%= f.submit "Save Changes", class:"button"%>
<% end %>
<%= button_to 'Delete', user_path(user.id), method: "delete", data: { confirm: 'Are you sure?' }, class:"button" %>
